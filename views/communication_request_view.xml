<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="isy_communication_type_tree">
            <field name="name">ISY Communication Type Tree</field>
            <field name="model">isy.communication.request.type</field>
            <field name="arch" type="xml">
                <tree default_order='name desc'>
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="isy_communication_type_form">
            <field name="name">ISY Communication Type Form</field>
            <field name="model">isy.communication.request.type</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group cols="2">
                            <group>
                                <field name="name"/>
                                <field name="active"/>
                            </group>
                            <group>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="menu_isy_communication_type_action">
            <field name="name">Communication Type</field>
            <field name="res_model">isy.communication.request.type</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>


        <menuitem
            name="Communication Type"
            id="isy_ticketing.menu_communication_type"
            parent="isy_ticketing.menu_settings"
            action="isy_ticketing.menu_isy_communication_type_action"
            sequence="12"/>

        <!-- Communication Request Tree -->
        <record model="ir.ui.view" id="isy_communication_request_calendar">
            <field name="name">Communication Request Calendar</field>
            <field name="model">isy.communication.request</field>
            <field name="arch" type="xml">
                <calendar color="display_name" date_start="date_from_to_show" date_stop="date_to_toshow" string="Communication Request">
                    <field name="name"/>
                    <field name="subject"/>
                    <field name="assign_person_id"/>
                    <field name="request_person"/>
                    <field name="event_date"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>

        <record model="ir.ui.view" id="isy_communication_request_tree">
            <field name="name">ISY Communication Tree</field>
            <field name="model">isy.communication.request</field>
            <field name="arch" type="xml">
                <tree default_order='name desc'>
                    <field name="name"/>
                    <field name="request_type_id"/>
                    <field name="subject"/>
                    <field name="assign_person_id"/>
                    <field name="request_person"/>
                    <field name="event_date"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Communication Request Form -->
        <record model="ir.ui.view" id="isy_communication_request_form">
            <field name="name">ISY Communication Form</field>
            <field name="model">isy.communication.request</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button string="Approve" groups="isy_ticketing.group_communication_manager" type="object" class="oe_highlight" name="approve_request" invisible="state not in ('request_for_approval')"/>
                        <button string="Reject" groups="isy_ticketing.group_communication_user" type="object" class="oe_highlight" name="reject_request" invisible="state not in ('request_for_confirmation','request_for_approval')"/>
                        <button string="Done" type="object" class="oe_highlight" name="done_request" groups="isy_ticketing.group_communication_requestor" invisible="state != 'approved'"/>
                        <button string="Cancel" type="object" class="oe_highlight" name="request_cancelled" invisible="state not in ('request_for_approval','approved')" groups="isy_ticketing.group_communication_user,isy_ticketing.group_communication_manager"/>
                    
                        <field name="state" widget="statusbar" statusbar_visible="draft,request_for_approval,approved,rejected,done,cancelled"/>

                    </header>
                    <sheet>
                        <div class="oe_title">
                            <h3>
                                <field name="name" readonly="1"/>
                            </h3>
                        </div>
                        <group cols="2">
                            <field name="request_type_id" readonly="state != 'draft'"/>
                            <field name="subject" required='1' readonly="state == 'done'"/>
                            <field name="event_date" required="1" readonly="state != 'draft'"/>
                            <label for="start_time" string="Start Time"></label>
                            <div><field name="start_time" required="1" widget="float_time" options="{'round_off': True}" class="oe_inline" readonly="state != 'draft'"/><span style='color:#9e9ead' class="oe_edit_only"> [ HH:MM:SS and 24 hrs format ]</span></div>
                            <label for="end_time" string="End Time"></label>
                            <div><field name="end_time" required="1" widget="float_time" options="{'round_off': True}" class="oe_inline" readonly="state != 'draft'"/><span style='color:#9e9ead' class="oe_edit_only"> [ HH:MM:SS and 24 hrs format ]</span></div>
                            <field name="description"/>
                            <field name="request_date" readonly="1"/>
                            <field name="request_person" readonly="1"/>
                            <field name="request_person_email" readonly="1"/>
                            <field name="assign_person_id" readonly="state != 'request_for_approval'"/>
                            <field name="approver_id" readonly="1"/>
                        </group>
                        <notebook>
                            <page string="Note">
                                <field name="special_note" readonly="state == 'done'" placeholder="Special note which translate request from body by responsible person"/>
                            </page>
                            <page string="Cancellation Reason" groups="isy_ticketing.group_communication_user,isy_ticketing.group_communication_manager">
                                <field name="cancellation_reason" placeholder="Cancellation Reason" readonly="state == 'done'"/>
                            </page>
                        </notebook>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Communication Request Action -->
        <record model="ir.actions.act_window" id="menu_isy_communication_request_action">
            <field name="name">Communication Requests</field>
            <field name="res_model">isy.communication.request</field>
            <field name="view_mode">tree,form,calendar</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>

        <!-- Communication Request Menu --> 
        <menuitem
            name="Communication Requests"
            id="isy_ticketing.menu_communication_request"
            parent="isy_ticketing.menu_requests"
            action="isy_ticketing.menu_isy_communication_request_action"
            sequence="10"/>
    </data>
</odoo>
