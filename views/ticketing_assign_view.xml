<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record model="ir.ui.view" id="isy_ticketing_assign_person_tree">
            <field name="name">ISY Ticketing Assign Person Tree</field>
            <field name="model">isy.ticketing.assign.person</field>
            <field name="arch" type="xml">
                <tree default_order='name desc'>
                    <field name="assign_person_id"/>
                    <field name="assign_person_email"/>
                    <field name="assign_person_manager_id"/>
                    <field name="assign_person_manager_email"/>
                    <field name="request_type"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="isy_clinic_assign_person_form">
            <field name="name">ISY Ticketing Assign Person Form</field>
            <field name="model">isy.ticketing.assign.person</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group cols="2">
                            <group>
                                <field name="assign_person_id"/>
                                <field name="assign_person_email"/>
                                <field name="assign_person_manager_id"/>
                                <field name="assign_person_manager_email"/>
                            </group>
                            <group>
                                <field name="request_type"/>
                                <field name="active"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="menu_isy_ticketing_assign_person_action">
            <field name="name">Ticketing Assign Person</field>
            <field name="res_model">isy.ticketing.assign.person</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{}</field>
            <field name="domain">[]</field>
        </record>


        <menuitem
            name="Ticketing Assign Person"
            id="isy_ticketing.menu_ticketing_assign_person"
            parent="isy_ticketing.menu_settings"
            action="isy_ticketing.menu_isy_ticketing_assign_person_action"
            sequence="10"/>

    </data>
</odoo>
